<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salun.androidlabs.ChatWindow">

    <ListView
        android:id="@+id/chatWindow"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/sendTextMessageButton">

    </ListView>

    <FrameLayout
        android:id="@+id/chatWindowFrame"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/chatWindow"
        android:layout_height="match_parent">
    </FrameLayout>

    <EditText
        android:id="@+id/textMessageBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/sendTextMessageButton"
        android:hint="textMessage"/>

    <Button
        android:id="@+id/sendTextMessageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/chatWindowFrame"
        android:text="Send"/>


</RelativeLayout>
